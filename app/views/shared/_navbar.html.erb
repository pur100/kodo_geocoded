<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("https://res.cloudinary.com/dpwhjxnci/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1583344633/KODO/SYSTEM/KODO_Logo_Box_Transparent_Blue_hb2ikh.png", width: 80, crop: :fill) %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Events", events_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Posts", posts_path, class: "nav-link" %>
        </li>

      <% if user_signed_in? %>


        <li class="nav-item">
          <%= link_to "Dashboard", user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Create Event", new_user_event_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Create Post", new_user_post_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <%= link_to 'Sign out', destroy_user_session_path, :method => :delete  %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
